<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetoAndroid.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30" Spacing="20">

            <Image
                Source="utc_logo.png"
                HeightRequest="250"
                Aspect="AspectFill"
                BackgroundColor="Transparent"
                SemanticProperties.Description="logo da Universidade de Tecnologia e Ciências (sigla UTC)"
                HorizontalOptions="Center"/>

            <Label
                x:Name="lblBoasVindas"
                Text="Bem vindo(a)!"
                HorizontalTextAlignment="Center"
                FontSize="Title"
                FontAttributes="Bold"/>

            <Label
                x:Name="lblEmConstrucao"
                Text="Este app ainda está em construção."
                FontSize="Small"
                FontAttributes="Italic"
                HorizontalTextAlignment="Center"/>

            <Image
                Source="em_construcao.png"
                HeightRequest="200"
                VerticalOptions="End"
                Aspect="AspectFit"
                SemanticProperties.Description="Placa de aviso com cones ao lado."/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetoAndroid.Pages.confirmaDelete"
             Title="confirmaDelete">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*"
          Padding="10, 250, 30, 250"
          RowSpacing="50"
          ColumnSpacing="10"
          BackgroundColor="DarkSlateGray">

        <Label Text="Deseja realmente deletar?" 
               FontSize="Large" 
               TextColor="White"
               HorizontalTextAlignment="Center"
               Margin="20"
               Grid.Row="0"
               Grid.ColumnSpan="2"/>

        <Button Text="Cancelar" 
                Clicked="OnClickedCancela" 
                BackgroundColor="Gray"
                TextColor="White"
                WidthRequest="100"
                Grid.Row="1"
                Grid.Column="0"/>
        
        <Button Text="Confirmar" 
                Clicked="OnClickedConfirma" 
                BackgroundColor="Red"
                TextColor="White"
                WidthRequest="100"
                Grid.Row="1"
                Grid.Column="1"/>
    </Grid>
</ContentPage>
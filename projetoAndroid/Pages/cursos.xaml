<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetoAndroid.Pages.cursos"
             Title="cursos">
    
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">

            <Entry
                x:Name="etrCursos"
                Placeholder="Pesquise aqui"/>

            <Label 
                x:Name="lblCursos"
                Text="Cursos"
                FontAttributes="Bold"
                FontSize="Title"/>

            <BoxView
                x:Name="bxvGuardandoCaixao3"
                HeightRequest="200"
                Color="LightGray"/>

            <Button
                x:Name="btnAddCurso"
                Text="+ ADICIONAR"
                Clicked="OnClickPaginaAdicionarCurso"/>

            <Button
                x:Name="btnExcluirCurso"
                Text="EXCLUIR"/>

            <Button
                x:Name="btnModificarCurso"
                Text="EDITAR"
                Clicked="OnClickPaginaEditarCurso"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>